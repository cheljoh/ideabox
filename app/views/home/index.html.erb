<div class="container">
  <h1>Ideabox!</h1>
  
  <% @ideas.each do |idea| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= idea.title %></span>
            <p><%= idea.body %></p>
          </div>
          <div class="card-action">
            <p><%= idea.quality %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
